{
	"manifest_version": 3,
	"name": "Vite Passport",
	"version": "1.0.0",
	"action": {
		"default_title": "Vite Passport",
		"default_popup": "popup.html"
	},
	"permissions": ["storage"],
	"background": {
		"service_worker": "src/background.ts",
		"type": "module"
	},
	"content_scripts": [
		{
			"js": ["src/contentScript.ts"],
			"matches": ["<all_urls>"],
			"run_at": "document_start",
			"all_frames": true
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["src/confirmation.html", "src/injectedScript.ts"],
			"matches": ["<all_urls>"]
		}
	]
}
